# ==============================================
# CONFIGURATION GÉNÉRALE
# ==============================================
NODE_ENV=development
PORT=4000
API_PREFIX=api

# ==============================================
# BASE DE DONNÉES
# ==============================================
DATABASE_URL="postgresql://user:password@localhost:5432/spotlight_lover?schema=public"

# ==============================================
# JWT & AUTHENTIFICATION
# ==============================================
JWT_SECRET="change-this-to-a-very-secure-secret-key-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="change-this-to-another-secure-refresh-secret-key"
JWT_REFRESH_EXPIRES_IN="7d"

# ==============================================
# FRONTEND & CORS
# ==============================================
FRONTEND_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:4000"

# ==============================================
# CLOUDINARY (Stockage vidéos)
# ==============================================
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
CLOUDINARY_FOLDER="spotlight-lover"

# ==============================================
# PAIEMENTS - MTN MOBILE MONEY
# ==============================================
MTN_MOMO_API_KEY="your-mtn-api-key"
MTN_MOMO_API_SECRET="your-mtn-api-secret"
MTN_MOMO_SUBSCRIPTION_KEY="your-mtn-subscription-key"
MTN_MOMO_CALLBACK_URL="https://your-domain.com/api/webhooks/mtn"
MTN_MOMO_ENVIRONMENT="sandbox"
# Options: sandbox, production

# ==============================================
# PAIEMENTS - ORANGE MONEY
# ==============================================
ORANGE_MONEY_CLIENT_ID="your-orange-client-id"
ORANGE_MONEY_CLIENT_SECRET="your-orange-client-secret"
ORANGE_MONEY_MERCHANT_KEY="your-merchant-key"
ORANGE_MONEY_CALLBACK_URL="https://your-domain.com/api/webhooks/orange"
ORANGE_MONEY_ENVIRONMENT="sandbox"
# Options: sandbox, production

# ==============================================
# PAIEMENTS - STRIPE (Cartes bancaires)
# ==============================================
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
STRIPE_CURRENCY="XOF"
# XOF = FCFA

# ==============================================
# REDIS (Cache & Jobs)
# ==============================================
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# ==============================================
# RATE LIMITING
# ==============================================
THROTTLE_TTL="60"
THROTTLE_LIMIT="100"

# ==============================================
# MONITORING & LOGGING
# ==============================================
SENTRY_DSN=""
LOG_LEVEL="debug"
# Options: error, warn, info, debug

# ==============================================
# SÉCURITÉ
# ==============================================
BCRYPT_ROUNDS="10"
MAX_FILE_SIZE="52428800"
# 50 MB en bytes

# ==============================================
# EMAIL (Optionnel)
# ==============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@spotlightlover.com"
